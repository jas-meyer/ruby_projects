<h1> Editing <%=@student.first_name%> <%=@student.last_name%> </h1>

<form action = "/dojos/<%=@dojo.id%>/students/<%=@student.id%>" method = "post">
	<input type="hidden" name ="authenticity_token" value = "<%= form_authenticity_token %>">
	<input type ="hidden" name="_method" value="patch">
<h3> First Name: <input type ="text" name ="student[first_name]" value = "<%=@student.first_name%>"></h3>
<h3> Last Name: <input type ="text" name = "student[last_name]" value = "<%=@student.last_name%>"></h3>
<h3> Email Address: <input type ="text" name = "student[email]" value = "<%=@student.email%>"></h3>
<h3> Dojo: <select name = "student[dojo_id]" selected = <%=@dojo.branch%>
	>
	<% @dojos.each do |dojo| %>
<option value ="<%=dojo.id%>"><%=dojo.branch%></option>
	<% end %>
</select>
</h3>
<button type="submit">Update</button>
</form>

<a href ='/dojos'>Home</a> | <a href ='/dojos/<%=@dojo.id%>/students/<%=@student.id%>'><%=@student.first_name%></a>