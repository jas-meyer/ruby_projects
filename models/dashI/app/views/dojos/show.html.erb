<h1><%=@dojo.branch%> Dojo <a href ='/dojos/<%=@dojo.id%>/edit'>Edit</a>
</h1>

<h2>Address: <%=@dojo.street%> </h2>

<h2>City: <%=@dojo.city%> State: <%=@dojo.state%></h2>

<h1> Student Roster </h1>
<table>
	<tr>
		<th> First Name </th>
		<th> Last Name </th>
		<th> Email </th>
		<th> Actions </th>
	</tr>

<% @students.each do |student| %>
	<tr>
  		<td><%= student.first_name %></td>
  		<td><%= student.last_name %></td>
  		<td><%= student.email %></td>
  		<td><a href ='/dojos/<%=@dojo.id%>/students/<%=student.id%>'>Show</a>
  			<a href ='/dojos/<%=@dojo.id%>/students/<%=student.id%>/edit'>Edit</a>
  			<a href ='/dojos/<%=@dojo.id%>/students/<%=student.id%>' data-method="delete">Destroy</a>
  	</tr>
<% end %>
</table>
